@page "/counter"
@inject IToastService ToastService


<Restricted>
    <Yes>
        <p>Current count: @currentCount</p>

        <button class="btn btn-primary" @onclick="IncrementCount">Click me</button>    
    </Yes>
  
</Restricted>

<button @onclick="@(() => ToastService.ShowSuccess("Success Toast"))">Display Toast</button>
 
    
@code {
    int currentCount = 0;

    void IncrementCount()
    {
        currentCount++;
    }
}
