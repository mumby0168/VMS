        <br />
        <button class="btn edit-btn"><i class="fas fa-edit"></i></button>
    </div>
    <hr />
    <div class="header-grid">
        <div class="contact-info">
            <h2>John Doe</h2>
            <h4>john.doe@hotmail.com</h4>
            <h6>07568512672</h6>
            <button class="btn edit-btn"><i class="fas fa-edit"></i></button>
        </div>
        <div class="business-address">
            <h2>Address Line 1</h2>
            <h4>Address Line 2</h4>
            <h6>Postcode</h6>
            <button class="btn edit-btn"><i class="fas fa-edit"></i></button>
        </div>
    </div>
</div>


