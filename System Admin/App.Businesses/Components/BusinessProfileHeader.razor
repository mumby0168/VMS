


<style>
    /* Header Styles */
    .jumbotron {
        background-color: white;
    }

    .business-header {
        height: 50%;
    }

    .header-grid {
        display: grid;
        grid-template-columns: 50% 50%;
        grid-gap: 1rem;        
        margin: auto;
    }

    .business-core-info {
        text-align: center;
    }

    .contact-info {
        text-align: left;
    }

    .edit-btn {
        background-color: transparent;
    }

    .edit-btn:hover {
        background-color: lightgray;
    }

    .business-address {
        text-align: right;
    }


    @@media screen and (min-width: 1200px) {
        .header-grid {
            width: 60%;
        }
    }

    @@media screen and (max-width: 750px) {
        .header-grid {
            width: 60%;
            grid-template-columns: 100%;
        }
        .business-address {
            text-align: center;
            word-wrap: break-word;
        }        
        .contact-info {
            text-align: center;
            word-wrap: break-word;
        }
    }
</style>


